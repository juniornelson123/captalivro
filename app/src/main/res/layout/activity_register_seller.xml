<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:background="#F5F5F5"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.junior.captalivrosv2.RegisterSellerActivity">

    <android.support.v7.widget.Toolbar
        android:background="@color/primary"
        android:id="@+id/toolbar_cadastro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize" />

    <RelativeLayout
        android:layout_below="@+id/toolbar_cadastro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp">
        <android.support.v7.widget.CardView
            android:id="@+id/card"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <RelativeLayout
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/image_perfil"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:minWidth="100dp"
            android:minHeight="100dp"
            android:maxWidth="100dp"
            android:maxHeight="100dp"
            android:src="@drawable/ic_add_a_photo_white_48dp"/>

        <EditText

            android:id="@+id/fone"
            android:layout_width="wrap_content"
            android:minWidth="120dp"
            android:maxWidth="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingTop="50dp"
            android:textSize="16sp"
            android:paddingLeft="16dp"
            android:hint="Fone"/>

        <EditText
            android:id="@+id/numero_box"
            android:layout_below="@+id/fone"
            android:layout_width="wrap_content"
            android:minWidth="120dp"
            android:maxWidth="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingTop="16dp"
            android:paddingLeft="16dp"
            android:hint="Numero do Box"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_below="@+id/card"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <RelativeLayout
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
            android:id="@+id/cnpj"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:hint="Cnpj" />

        <EditText
            android:id="@+id/nome"

            android:layout_below="@+id/cnpj"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:hint="Nome"/>

        <EditText
            android:id="@+id/email"
            android:layout_below="@+id/nome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:hint="Email"/>


        <EditText
            android:id="@+id/senha_boxe"
            android:layout_below="@+id/email"
            android:layout_width="match_parent"
            android:paddingBottom="16dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="Senha" />

        <Button
            android:id="@+id/btn_cadastrar"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_centerHorizontal="true"
            android:background="@color/colorPrimary"
            android:layout_below="@+id/senha_boxe"
            android:text="Salvar" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
        </RelativeLayout>
</RelativeLayout>
    </ScrollView>
